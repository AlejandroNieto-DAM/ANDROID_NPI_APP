<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuración"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar la contraseña"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"/>


    <EditText
        android:id="@+id/editTextNuevaContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce una nueva contraseña"
        android:inputType="textPassword"
        android:layout_below="@id/textViewTitulo"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/btnCambiarCredenciales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar contraseña"
        android:layout_below="@id/editTextNuevaContrasena"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/notificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desactivar notificaciones"
        android:layout_below="@id/btnCambiarCredenciales"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/textLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notificaciones"

        android:text="Cambiar idioma de la asistencia por voz"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"/>

    <Spinner
        android:id="@+id/spinnerOpciones"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLanguage"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:entries="@array/alphabet_color" />

    <TextView
        android:id="@+id/textversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versión 1.0"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="700dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

