<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nos dirigimos a:"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/siteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="sitio"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/planoImageView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/siteText"
        android:scaleType="fitXY"
        android:src="@drawable/conserjeria" />

    <ImageView
        android:id="@+id/brujulaImageView"
        android:layout_width="102dp"
        android:layout_height="93dp"
        android:layout_centerInParent="true"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/planoImageView"
        android:layout_marginTop="16dp"
        android:text="Tu información aquí"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoTextView"
        android:layout_marginTop="16dp"
        android:text="Siguiente paso"
        android:textSize="20dp"
        android:textColor="@color/otro_blanco"
        android:layout_margin="25dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
